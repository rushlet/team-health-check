<form id="form_unit-converter">
    <h2>How do you feel about how our team is doing at....</h2>
    {{#each team_health_questions}}
        <div class="question-container {{id}} to-answer">
            <h3>{{title}}</h3>
            <div class="btn-container">
                <input type="radio" name="{{id}}-choice" id="input_{{id}}_red" value="red">
                <label for="input_{{id}}_red" class="input_red"> 😔 </label>
                <input type="radio" name="{{id}}-choice" id="input_{{id}}_amber" value="amber">
                <label for="input_{{id}}_amber" class="input_amber"> 😐 </label>
                <input type="radio" name="{{id}}-choice" id="input_{{id}}_green" value="green">
                <label for="input_{{id}}_green" class="input_green"> 😁 </label>
            </div>
            <span class="italic">For example...</span>
            <span class="example_good">👍 {{example_good}}</span>
            <span class="example_bad">👎 {{example_bad}}</span>
        </div>
    {{/each}}
    <div class="question-container submit to-answer">
        <div class="summary-container"></div>
        <input type="submit" value="Submit" id="team-health-submit">  
    </div>
</form>